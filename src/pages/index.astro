---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

import FloatingStars from "../components/FloatingStars.jsx";
import Popouts from "../components/popouts.svelte";

let animate = true;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <FloatingStars client:load />
      <div class="content-card">
        <div class="zavi-pic"></div>
        <h1>Zavier McLean</h1>
        <h2>frontend developer</h2>
        <Popouts client:load />
      </div>
    </main>

    <style is:global>
      @font-face {
        font-family: "vulf mono bold";
        src: url("../../fonts/mono/Vulf_Mono-Bold_web.ttf") format("truetype");
        font-display: swap;
      }
      @font-face {
        font-family: "vulf mono italic";
        src: url("../../fonts/mono/Vulf_Mono-Italic_web.ttf") format("truetype");
        font-display: swap;
      }
      * {
        margin: 0;
      }
      h1 {
        padding: 1rem 0 2rem;
        font-family: "vulf mono bold";
      }
      h2 {
        padding-bottom: 1.5rem;
        font-family: "vulf mono italic";
      }
      .animate-button {
        position: absolute;
        top: 5%;
        right: 5%;
        z-index: 100;
        border: none;
        background-color: hsl(60, 100%, 94%);
        font-family: "vulf mono italic";
        font-size: 0.9rem;
        border-radius: 5px;
        box-shadow: 4px 4px hsl(331, 60%, 40%);
        padding: 0.25em 0.5em;
        transition: transform 0.1s ease-out;
      }
      .animate-button:hover {
        transform: translate(4px, 4px);
        box-shadow: 1px 1px hsl(331, 80%, 60%);
      }
      .animate-button:active {
        color: hsl(0, 0%, 100%);
        background-color: hsl(331, 80%, 60%);
        box-shadow: none;
        transform: translate(4px, 4px);
      }
      .animate-button-text {
        display: flex;
        align-items: center;
      }
      .animate-button-text svg {
        padding: 0.25em 0.5em;
      }

      @media (max-width: 35em) {
        .animate-button {
          right: 10%;
        }
      }
    </style>
    <style>
      canvas {
        width: 100vw;
        height: 100vh;
        z-index: -9999;
        overflow: hidden;
      }
      .content-card {
        position: absolute;
        z-index: 100;
        display: flex;
        align-items: center;
        flex-direction: column;
        left: 0;
        right: 0;
        top: 40%;
        max-width: 24rem;
        margin: auto;
        word-break: break-word;
        background-color: hsl(60, 100%, 94%);
        border-radius: 10px;
        box-shadow: 0.25rem 0.25rem hsl(331, 60%, 40%);
        padding: 0.6rem;
      }

      @media (max-width: 35em) {
        .content-card {
          max-width: 18rem;
        }
        .content-card > h1 {
          font-size: 1.5rem;
        }
        .content-card > h2 {
          font-size: 1.2rem;
        }
      }
    </style>
  </body>
</html>
