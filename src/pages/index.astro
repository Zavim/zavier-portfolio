<style is:global define:vars={{ beige, darkBlue }}>
  @font-face {
    font-family: "vulf mono bold";
    src: url("../../fonts/mono/Vulf_Mono-Bold_web.ttf") format("truetype");
    font-display: swap;
  }
  @font-face {
    font-family: "vulf mono italic";
    src: url("../../fonts/mono/Vulf_Mono-Italic_web.ttf") format("truetype");
    font-display: swap;
  }
  * {
    margin: 0;
  }
  html.dark {
    color: hsl(60, 100%, 94%);
    background-color: hsl(230, 46%, 5%);
  }
  .dark .content-card {
    background-color: hsl(230, 46%, 25%);
    box-shadow: 4px 4px hsl(155, 100%, 66%);
  }
  .dark img {
    border: solid 1px hsl(155, 100%, 66%);
  }
  body {
    line-height: 1.5em;
    height: 100%;
    /* background-color: #fe9bcb; */
  }
  img {
    max-width: 100%;
    display: block;
    margin: 2rem 0 1rem;
    border-radius: 10px;
    border: solid 1px hsl(331, 98%, 80%);
  }
  h1 {
    line-height: 1.2em;
    padding: 1rem 0 2rem;
    font-family: "vulf mono bold";
  }
  h2,
  h3 {
    padding-bottom: 1.5rem;
    font-family: "vulf mono italic";
  }
  /* .dark {
    background-color: hsl(229, 47%, 25%);
    color: hsl(60, 100%, 94%);
  } */
  .content-container::before,
  .content-container::after {
    position: absolute;
    left: 0;
    top: 0;
    content: "";
    width: 100vw;
    height: 100vh;
    z-index: 1;
    opacity: 30%;
  }
  .content-container::before {
    /* background: url("data:image/svg+xml;base64,PHN2Zz4KICAgIDxmaWx0ZXIgaWQ9ImdyYWlueSI+CiAgICAgICAgPGZlVHVyYnVsZW5jZSB0eXBlPSJ0dXJidWxlbmNlIiBiYXNlRnJlcXVlbmN5PSIwLjY1IiAvPgogICAgPC9maWx0ZXI+Cjwvc3ZnPg=="); */
    background: #fe9bcb;
  }
  .content-container.dark::before {
    background: none;
  }

  @media (max-width: 35em) {
    .settings-container {
      right: 10%;
    }
  }
</style>
<style>
  canvas {
    width: 100vw;
    height: 100vh;
    height: 100svh;
    height: 100dvh;
    z-index: -9999;
    overflow: hidden;
  }
  .content-card {
    position: absolute;
    z-index: 100;
    display: flex;
    align-items: center;
    flex-direction: column;
    left: 0;
    right: 0;
    top: 40%;
    max-width: 24rem;
    margin: auto;
    word-break: break-word;
    background-color: var(--beige);
    border-radius: 10px;
    box-shadow: 0.25rem 0.25rem hsl(331, 60%, 40%);
    padding: 0.6rem;
  }

  @media (max-width: 35em) {
    .content-card {
      max-width: 18rem;
    }
    .content-card > h1 {
      font-size: 1.5rem;
    }
    .content-card > h2 {
      font-size: 1.2rem;
    }
  }
</style>
